<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="booksmanagement.BooksManagementController">
    <stylesheets>
        <URL value="@BooksManagement.css" />
    </stylesheets>
    <top>
        <HBox BorderPane.alignment="CENTER">
            <children>
            <Button fx:id="search" mnemonicParsing="false" onMouseClicked="#showSearchScreen" text="Search" />
            <Button fx:id="view" mnemonicParsing="false" onMouseClicked="#showViewScreen" text="View" />
            <Button fx:id="insert" mnemonicParsing="false" onMouseClicked="#showInsertScreen" text="Insert" />
                <Button fx:id="update" mnemonicParsing="false" onMouseClicked="#showUpdateScreen" text="Update" />
                <Button fx:id="delete" mnemonicParsing="false" onMouseClicked="#showDeleteScreen" text="Delete" />
            </children>
        </HBox>
    </top>
    <center>
        <AnchorPane minHeight="400.0" minWidth="800.0" style="-fx-background-color: #ddd;" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" layoutX="200.0" layoutY="150.0" minHeight="50.0" minWidth="400.0" style="-fx-font-size: 18;" text="Select Your Option !" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>
