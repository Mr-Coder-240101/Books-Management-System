<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" minHeight="400.0" minWidth="800.0" style="-fx-background-color: #999;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="booksmanagement.BooksSearchController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="200.0" layoutY="100.0" minHeight="50.0" minWidth="200.0" text="Book Title :" textAlignment="CENTER">
         <font>
            <Font size="18.0" />
         </font></Label>
      <TextField fx:id="title" layoutX="400.0" layoutY="100.0" minHeight="50.0" minWidth="200.0">
         <font>
            <Font size="18.0" />
         </font></TextField>
      <Button fx:id="search" layoutX="300.0" layoutY="300.0" minHeight="50.0" minWidth="200.0" mnemonicParsing="false" onMouseClicked="#searchBook" text="Search">
         <font>
            <Font size="18.0" />
         </font></Button>
   </children>
</AnchorPane>
